<!DOCTYPE html>
<html lang="en">

<head>
    <title>To Do List App</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<style>
    .tbl {
        width: 300px;
    }

    .edit {
        border: 1px solid blue;
        padding: 8px;
        color: blue;
        font-size: 20px;
    }

    .delete {
        border: 1px solid red;
        padding: 8px;
        color: red;
        font-size: 20px;
    }
</style>

<body>

    <div class="container mt-3">
        <center>
            <form method="post" action="/addName">
                <h1>Add User</h1>
                <table class="table table-success table-striped tbl">
                    <input type="hidden" value="<%= single.userid %>" name="editId">
                    <tr>
                        <td>Name :- </td>
                        <td><input type="text" value="<%= single.name %>" name="name"></td>
                    </tr>
                    <tr>
                        <td>Email :- </td>
                        <td><input type="type" value="<%= single.email %>" name="email"></td>
                    </tr>
                    <tr>
                        <td>Course :- </td>
                        <td><input type="text" value="<%= single.course %>" name="course"></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><input type="submit"></td>
                    </tr>
                </table>
            </form>
            <h1>All User</h1>
            <table class="table table-success table-striped">
                <tr>
                    <td>Gr Id</td>
                    <td>Name</td>
                    <td>Email</td>
                    <td>Course</td>
                    <td>Edit</td>
                    <td>Delete</td>
                </tr>
                <% record.map((value)=>{ %>
                    <tr>
                        <td>
                            <%= value.userid %>
                        </td>

                        <td>
                            <%= value.name %>
                        </td>

                        <td>
                            <%= value.email %>
                        </td>

                        <td>
                            <%= value.course %>
                        </td>
                        <td>
                            <a href="/editData?edId=<%= value.userid %>"><i
                                    class="fa-solid fa-pen-to-square edit"></i></a>
                        </td>
                        <td>
                            <a href="/deleteData?delId=<%= value.userid %>"><i
                                    class="fa-solid fa-trash-can delete"></i></a>
                        </td>
                    </tr>
                    <% }) %>
            </table>
        </center>
    </div>

</body>

</html>